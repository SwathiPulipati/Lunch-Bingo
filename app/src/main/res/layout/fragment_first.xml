<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset_background"
    android:padding="16dp"
    tools:context=".FirstFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/boardCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/talliesCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/boardView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </HorizontalScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/talliesCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TALLY BOARD"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Inappropriate Jokes"
                app:layout_constraintBottom_toBottomOf="@id/plusButton1"
                app:layout_constraintEnd_toStartOf="@id/displayTallyCardView1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/plusButton1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/displayTallyCardView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="@id/plusButton1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/plusButton1">

                <TextView
                    android:id="@+id/tally1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="3dp"
                    android:text="0"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/minusButton1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="false"
                android:scaleType="centerInside"
                android:src="@drawable/minus_sign"
                app:layout_constraintBottom_toBottomOf="@id/plusButton1"
                app:layout_constraintEnd_toStartOf="@+id/plusButton1"
                app:layout_constraintTop_toTopOf="@+id/plusButton1" />

            <ImageButton
                android:id="@+id/plusButton1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="false"
                android:scaleType="fitCenter"
                android:src="@drawable/plus_sign"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/displayTallyCardView1"
                app:layout_constraintTop_toBottomOf="@id/textView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Short Jokes"
                app:layout_constraintBottom_toBottomOf="@id/plusButton2"
                app:layout_constraintEnd_toStartOf="@id/displayTallyCardView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/plusButton2" />

            <androidx.cardview.widget.CardView
                android:id="@+id/displayTallyCardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="@id/plusButton2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/plusButton2">

                <TextView
                    android:id="@+id/tally2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="3dp"
                    android:text="0"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/minusButton2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="false"
                android:scaleType="fitCenter"
                android:src="@drawable/minus_sign"
                app:layout_constraintBottom_toBottomOf="@id/plusButton2"
                app:layout_constraintEnd_toStartOf="@+id/plusButton2"
                app:layout_constraintTop_toTopOf="@+id/plusButton2" />

            <ImageButton
                android:id="@+id/plusButton2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="false"
                android:scaleType="fitCenter"
                android:src="@drawable/plus_sign"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/displayTallyCardView1"
                app:layout_constraintTop_toBottomOf="@id/plusButton1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>